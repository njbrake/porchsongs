# porchsongs Configuration
# Copy this file to .env and fill in your values

# Database (required for production)
DATABASE_URL=postgresql://porchsongs:porchsongs@localhost:5432/porchsongs

# JWT secret (required in production — use a long random string)
JWT_SECRET=change-me-in-production

# Auth backend: "app_secret" (default, OSS single-user)
AUTH_BACKEND=app_secret

# Optional: password-protect the app (single-user mode)
# When set, users must log in with this password before accessing any page or API.
# Supports plaintext or bcrypt hash (e.g. $2b$12$...)
# APP_SECRET=mysecretpassword

# Premium plugin module path (optional — for porchsongs-premium)
# PREMIUM_PLUGIN=porchsongs_premium.plugin

# JWT token lifetimes
# JWT_EXPIRY_MINUTES=15
# REFRESH_TOKEN_DAYS=30

# CORS origins (comma-separated, * for all)
CORS_ORIGINS=*

# LLM Provider API Keys (set the ones you want to use)
# The server reads these from the environment — keys are never sent from the browser.
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
# GROQ_API_KEY=
# GEMINI_API_KEY=
